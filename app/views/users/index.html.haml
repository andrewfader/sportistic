%table.datatable
  %thead
    %tr
      %th Name
      %th Gender
      %th City
      %th Sports and Positions
      %th Experience Level
      %th Distance Willing to Travel
      %th Looking for a Team?
      %th Availability
  -User.where(privacy_toggle: true).each do |user|
    %tr
      %td=link_to user.name, user_path(user)
      %td=user.gender
      %td=user.city
      %td
        %table
          - user.user_sports.each do |user_sport|
            %tr
              %td= image_tag "/assets/#{user_sport.sport.name.downcase}.png", width: 25, height: 25
              %td #{user_sport.sport.name}#{user_sport.position.present? ? ", positions: #{user_sport.position.try(:flatten).try(:to_sentence)}" : ""}
      %td=user.experience_level
      %td=user.distance_to_travel
      %td=user.desire_to_join ? "Yes" : "No"
      %td=user.availability.to_sentence.gsub("Monday","Mon").gsub("Tuesday","Tues").gsub("Wednesday","Wed").gsub("Thursday","Thurs").gsub("Friday","Fri").gsub("Saturday","Sat").gsub("Sunday","Sun").gsub("morning","AM").gsub("night","PM")
