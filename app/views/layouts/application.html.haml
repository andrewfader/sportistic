    = javascript_include_tag "https://www.gstatic.com/freebase/suggest/4_2/suggest.min.js"
    = csrf_meta_tags
  %body
    .header
      .logo
        = link_to image_tag("logo1.jpg", class: 'logo'), "/", class: 'logo'
      .menu
        =link_to "About", "/about"
        - unless current_user
          = link_to "Join", new_user_registration_path
        - else
          = link_to "Profile", user_path(current_user)
        = link_to "Teams", teams_path
        = link_to "Players", users_path
        = link_to "Games", games_path
        = link_to "Leagues", leagues_path
      .login
        - unless current_user
          = link_to "Log in", new_user_session_path
        - else
          = link_to "Log out", destroy_user_session_path
    %p
    %br
    %br
    .content
      %p.notice
        = notice
      %p.alert
        = alert
      = yield

