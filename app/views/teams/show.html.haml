%h2.name=@team.name
.image=image_tag(@team.photo.url)
=link_to "Edit my team info", edit_team_path(@team) if can? :edit, @team
.location Location: #{@team.location}
.sport Sport: #{@team.sport}
.type Team Type: #{@team.team_type}
.year Year Founded: #{@team.year_founded}
.experience_level Experience Level: #{@team.experience_level}
.achievements Achievements: #{@team.achievements}
.availability Availability: #{@team.availability.to_sentence}
.league League: #{link_to @team.league_name, @team.league_url}
.roster
  %h3 Captain: #{link_to @team.captain.fullname, user_path(@team.captain)}
  Roster
  %ul
    - @team.users.each do |user|
      %li
        = link_to user.fullname, user_path(user)
- if can? :edit, @team
  = link_to "invite new players to your team", new_user_invitation_path
