%h2.name=@team.name
.image=image_tag(@team.photo.url)
=link_to "Edit", edit_team_path(@team) if can? :edit, @team
.location=@team.location
.sport=@team.sport
.type=@team.team_type
.year=@team.year_founded
.experience_level=@team.experience_level
.achievements=@team.achievements
.availability=@team.availability.to_sentence
.league=link_to @team.league_name, @team.league_url
.roster
  %ul
    - @team.users.each do |user|
      %li
        = user.fullname
- if can? :edit, @team
  = link_to "invite new players to your team", new_user_invitation_path
