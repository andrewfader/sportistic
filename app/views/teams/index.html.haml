%h3=link_to "Create Team", new_team_path if can? :create, Team
- if current_user
  - [[@matching_teams - current_user.member_teams, "Matching Teams"], [current_user.member_teams, "My Teams"]].each do |teams, caption|
    - if teams.present?
      %h2=caption
      .team_list
        = render "list", teams: teams

%h2 All Teams
%table.datatable
  %thead
    %tr
      %th Name
      %th Sport
      %th Location
      %th Experience Level
      %th Games Played
  - Team.all.each do |team|
    %tr
      %td=link_to team.name, team_path(team)
      %td=team.sports.map(&:name).to_sentence
      %td=team.location
      %td=team.experience_level
      %td=team.availability.to_sentence.gsub("Monday","Mon").gsub("Tuesday","Tues").gsub("Wednesday","Wed").gsub("Thursday","Thurs").gsub("Friday","Fri").gsub("Saturday","Sat").gsub("Sunday","Sun").gsub("morning","AM").gsub("night","PM")
